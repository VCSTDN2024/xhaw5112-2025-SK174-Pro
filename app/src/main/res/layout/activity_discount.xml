<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004d00"
    tools:context=".DiscountActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#06402B">

            <LinearLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/btnBurger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp"
                    android:translationY="20dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_menu" />

                <TextView
                    android:id="@+id/headerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Displayed Below are the courses offered"
                    android:textColor="#FFA500"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Six-Month Course (R1500 per course)"
                    android:textColor="#FFA500"
                    android:textSize="24sp"
                    android:textStyle="italic" />

                <CheckBox
                    android:id="@+id/firstAid"
                    style="@style/CourseCheckBox"
                    android:text="First Aid"
                    android:textStyle="italic" />

                <CheckBox
                    android:id="@+id/sewing"
                    style="@style/CourseCheckBox"
                    android:text="Sewing"
                    android:textStyle="italic" />

                <CheckBox
                    android:id="@+id/lifeSkills"
                    style="@style/CourseCheckBox"
                    android:text="Life Skills"
                    android:textStyle="italic" />

                <CheckBox
                    android:id="@+id/landscaping"
                    style="@style/CourseCheckBox"
                    android:text="Landscaping"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Six-Week Course (R750 per course)"
                    android:textColor="#FFA500"
                    android:textSize="24sp"
                    android:textStyle="italic" />

                <CheckBox
                    android:id="@+id/cooking"
                    style="@style/CourseCheckBox"
                    android:text="Cooking"
                    android:textStyle="italic" />

                <CheckBox
                    android:id="@+id/gardenMaintenance"
                    style="@style/CourseCheckBox"
                    android:text="Garden Maintenance"
                    android:textStyle="italic" />

                <CheckBox
                    android:id="@+id/childMinding"
                    style="@style/CourseCheckBox"
                    android:text="Child Minding"
                    android:textStyle="italic" />


                <Button
                    android:id="@+id/calculateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFC107"
                    android:text="Calculate Discount"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/resetBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFC107"
                    android:text="Reset"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Discount Calculator"
                    android:textColor="#FFA500"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/discountBox"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="#FFFFFF"
                    android:padding="14dp"
                    android:text=""
                    android:textColor="#FFA500"
                    android:textSize="24sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="6dp"
            android:background="@drawable/footer_background">

            <ImageButton
                android:id="@+id/btnInstagram"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#062807"
                android:contentDescription="Instagram"
                android:scaleType="centerInside"
                android:src="@drawable/instagram"
                tools:ignore="TouchTargetSizeCheck,UseAppTint" />

            <ImageButton
                android:id="@+id/btnTiktok"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#062807"
                android:contentDescription="Tiktok"
                android:scaleType="centerInside"
                android:src="@drawable/tiktok"
                tools:ignore="TouchTargetSizeCheck,UseAppTint" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#062807"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/menu" />

</androidx.drawerlayout.widget.DrawerLayout>
